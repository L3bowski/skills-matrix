@model int
@{
    ViewData["Title"] = "Skill details";
    var readOnly = ViewData["ReadOnly"].ToString().ToLower();
}

@Html.Partial("_Loader")

<div class="page-header">
    <h2 id="page-title">Skill not found</h2>
</div>

<form class="form-horizontal">
    <input id="model-id" type="hidden" value="@Model" />
    <input id="read-only" type="hidden" value="@readOnly" />

    <div class="form-group no-margin">
        <label for="Name">Name</label>
        <input id="model-name" value="" class="form-control"/>
    </div>

    <h3>Employees</h3>
    <ul id="employees-list" class="list-group">
    </ul>

    <!-- Read actions -->
    <a id="edit-button" class="btn btn-primary" href="#">Edit</a>
    <button id="delete-button" type="button" class="btn btn-danger" >Delete</button>

    <!-- Edit actions -->
    <button id="save-button" type="button" class="btn btn-primary">Save</button>
    <a id="cancel-button" class="btn btn-default" href="#">Cancel</a>
</form>
 
<hr />
@Html.ActionLink("Skills list", "index", "skill", null, new { @class = "btn btn-default" })

@section scripts {
    <script src="~/js/skills/html-nodes.js"></script>
    <script src="~/js/skills/details.js"></script>
}
