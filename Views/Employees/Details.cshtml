@model int
@{
    ViewData["Title"] = "Employee details";
    var readOnly = ViewData["ReadOnly"].ToString().ToLower();
}

<h2 id="page-title"></h2>

<form class="form-horizontal">
    <input id="model-id" type="hidden" value="@Model" />
    <input id="read-only" type="hidden" value="@readOnly" />

    <div class="form-group no-margin">
        <label for="Name">Name</label>
        <input id="model-name" value="" class="form-control"/>
    </div>

    <h3>Skills</h3>
    @Html.Partial("_PaginatedList", "skills")

    @Html.Partial("_PaginatedList", "add-skills")

    <!-- Read actions -->
    <a id="edit-button" class="btn btn-primary" href="#">Edit</a>
    <button id="delete-button" type="button" class="btn btn-danger" >Delete</button>

    <!-- Edit actions -->
    <button id="save-button" type="button" class="btn btn-primary">Save</button>
    <a id="cancel-button" class="btn btn-default" href="#">Cancel</a>
</form>

<hr />
@Html.ActionLink("Employees list", "index", "employees", null, new { @class = "btn btn-default" })

@section scripts {
    <script src="~/js/employees/details-elements.js"></script>
    <script src="~/js/employees/details-render.js"></script>
    <script src="~/js/employees/details-actions.js"></script>
    <script src="~/js/employees/details-state.js"></script>
}
