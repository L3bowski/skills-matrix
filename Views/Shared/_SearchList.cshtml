@{
    var listId = ViewData["searchListId"];
}

<div id="@listId-search-list" class="search-list">
    <div class="form-group no-margin @(ViewData["searcher"] != null && (bool) ViewData["searcher"] ? "" : "hidden")">
        <input id="@listId-keywords" class="form-control search-box"
        placeholder="@(ViewData["placeholder"] != null ? ViewData["placeholder"] : "Search...")" />
    </div>
    <div class="dynamic-content">
        <ul id="@listId-list" class="list-group clickable"></ul>
        @Html.Partial("_Loader", new ViewDataDictionary(ViewData) {
            {"loaderId", listId + "-loader"}
        })

        <div id="@listId-pagination" class="pagination-bar @(ViewData["pagination"] != null && (bool) ViewData["pagination"] ? "" : "hidden")">
            <ul id="@listId-pages" class="pagination clickable">
            </ul>
            <div class="dropdown pull-right">
                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    <span id="@listId-page-size">10</span>
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    <li class="text-right"><span class="dropdown-option" data-size="10">10</span></li>
                    <li class="text-right"><span class="dropdown-option" data-size="25">25</span></li>
                    <li class="text-right"><span class="dropdown-option" data-size="50">50</span></li>
                </ul>
            </div>
        </div>
    </div>
</div>
