@using SkillsMatrix.Models
@model Employee
@{
    ViewData["Title"] = "Employee details";
    var readMode = ViewData["Mode"] == "Read";
    var editMode = ViewData["Mode"] == "Edit";
    var existing = Model != null;

    var pageTitle = "Employee not found";
    if (existing) {
        pageTitle = @Model.Name;
    }
    else if(editMode) {
        pageTitle = "New employee";
    }
}

<div class="page-header">
    <h2>@pageTitle</h2>
</div>

<form class="form-horizontal">
    <input value="@(existing ? @Model.Id : 0)" type="hidden" id="id" />

    <div class="form-group no-margin">
        <label for="Name">Name</label>
        <input value="@(existing ? @Model.Name : "")" id="name" class="form-control" @(readMode ? "disabled" : "")/>
    </div>

    <h3>Skills</h3>
    <ul class="list-group">
        @foreach(Skill skill in Model.Skills) {
            <li class="list-group-item">
                @Html.ActionLink(@skill.Name, "details", "skill", new { id = @skill.Id }, new { @class = "reset" })
            </li>
        }
    </ul>

    @if(readMode && existing) {
        @Html.ActionLink("Edit", "edit", "employee", new {id = @Model.Id}, new { @class = "btn btn-primary" })
        <button type="button" class="btn btn-danger" id="delete-button">Delete</button>
    }
    else if(editMode) {
        <button type="button" id="save-button" class="btn btn-primary">Save</button>
        if (existing) {
            @Html.ActionLink("Cancel", "details", "employee", new { id = @Model.Id}, new { @class = "btn btn-default" })
        }
        else {
            @Html.ActionLink("Cancel", "index", "employee", null, new { @class = "btn btn-default" })
        }
    }
</form>

@if(existing) {
    <hr />
    @Html.ActionLink("Employees list", "index", "employee", null, new { @class = "btn btn-default" })
}

@section scripts {
    <script src="~/js/employees/delete.js"></script>
    <script src="~/js/employees/edit.js"></script>
}
